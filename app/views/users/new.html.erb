<div class="row resiger">
  <div class="col-sm-3"></div>

  <div class="col-sm-6">
    <h2>Sign up</h2>

    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>
        <div class="form-group">
          <%= f.label :firstname %><br />
          <%= f.text_field :name, autofocus: true ,class:"form-control", required:"true", placeholder:'First Name'%>
        </div>
        <div class="form-group">
          <%= f.label :lastname %><br />
          <%= f.text_field :lastname, autofocus: true ,class:"form-control", required:"true", placeholder:'Last Name'%>
        </div>
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true ,class:"form-control", required:"true", placeholder:'Email'%>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off" ,class:"form-control", required:"true", placeholder:'Password'%>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" ,class:"form-control", required:"true", placeholder:'Confirm'%>
        </div>
        <div class="form-group">
        <%= f.label "As Admin?" %>
        <%= f.check_box :admin %>
        </div>
        <div class="form-group">
          <%= f.submit "Sign up", class:"btn btn-primary" %>
        </div>
    <% end %>

  </div>

  <div class="col-sm-3"></div>
</div>
