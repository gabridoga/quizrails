<header>
  <div class="navbar navbar-default navbar-static-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li class="<%= is_active?(surveys_path) %>">
            <%= link_to surveys_path do %>
              Quizzes Management
              <span class='badge'> <%= surveys_count %> </span>
            <% end -%>
          </li>
          <% if signed_in? %>
          <% if current_user.admin? %>
          <li class="quiz_nav">
            <%= link_to 'Create Quiz', new_survey_path(type: 'quiz') %>
          </li>
          <li>
            <%= link_to 'Add User', admin_path%>
          </li>
          <li>
            <%= link_to 'User management', users_path%>
          </li>
          <% end %>
          <% end %>
        </ul>

          <ul class="nav navbar-nav navbar-right">
            <% if signed_in? %>
            <li class="quiz_nav">
              <p class="navbar-text">
                <%= link_to @current_user.name, user_path(@current_user.id) %>

                <br>
              </p>
            </li>
            <li class="quiz_nav">
              <%= link_to "Sign out", signout_path, method: "delete" %>
            </li>
            <% else %>
            <li class="quiz_nav"><%= link_to "Sign in", signin_path %></li>
            <% end %>
          </ul>

      </div>
    </div>
  </div>
</header>
